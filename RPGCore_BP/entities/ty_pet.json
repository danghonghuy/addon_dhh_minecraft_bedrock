{
  "format_version": "1.19.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dhh:ty_pet",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "sitting": {
        "minecraft:behavior.stay_while_sitting": {
          "priority": 1
        },
        "minecraft:interact": {
          "interactions": [
            {
              "on_interact": {
                "filters": {
                  "all_of": [
                    { "test": "is_owner", "subject": "other", "value": true },
                    { "test": "is_sneaking", "subject": "other", "value": false }
                  ]
                },
                "event": "stand_up",
                "target": "self"
              },
              "use_item": false,
              "play_sounds": "mob.wolf.whine",
              "interact_text": "action.interact.stand"
            }
          ]
        }
      },
      "standing": {
        "minecraft:behavior.follow_owner": {
          "priority": 4,
          "speed_multiplier": 1.2,
          "start_distance": 10,
          "stop_distance": 2.5
        },
        "minecraft:interact": {
          "interactions": [
            {
              "on_interact": {
                "filters": {
                  "all_of": [
                    { "test": "is_owner", "subject": "other", "value": true },
                    { "test": "is_sneaking", "subject": "other", "value": false }
                  ]
                },
                "event": "sit_down",
                "target": "self"
              },
              "use_item": false,
              "play_sounds": "mob.wolf.whine",
              "interact_text": "action.interact.sit"
            }
          ]
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": [
          "ty_pet",
          "mob",
          "pet"
        ]
      },
      "minecraft:tameable": {
        "probability": 1,
        "tame_items": [],
        "tame_event": {
          "event": "minecraft:on_tame"
        }
      },
      "minecraft:is_tamed": {},
      "minecraft:behavior.owner_hurt_by_target": {
        "priority": 1,
        "entity_types": {
          "filters": { "test": "is_family", "subject": "other", "operator": "!=", "value": "player" }
        }
      },
      "minecraft:behavior.owner_hurt_target": {
        "priority": 1
      },
      "minecraft:health": {
        "value": 40,
        "max": 40
      },
      "minecraft:movement": {
        "value": 0.3
      },
      "minecraft:attack": {
        "damage": 20
      },
      "minecraft:shooter": {
        "def": "minecraft:arrow",
        "aux_val": 21
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.8
      },
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0,
        "breathes_air": true,
        "breathes_water": false
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": true
      },
      "minecraft:movement.basic": {},
      "minecraft:jump.static": {},
      "minecraft:can_climb": {},
      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:behavior.ranged_attack": {
        "priority": 2,
        "speed_multiplier": 1.25,
        "attack_radius": 20.0,
        "attack_interval": 0.2
      },
      "minecraft:behavior.melee_attack": {
        "priority": 3,
        "speed_multiplier": 1.5,
        "track_target": true
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1,
        "entity_types": {
          "filters": { "test": "is_family", "subject": "other", "operator": "!=", "value": "player" }
        }
      },
      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 0.8
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 8.0
      },
      "minecraft:behavior.random_look_around": {
        "priority": 8
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "standing"
          ]
        }
      },
      "minecraft:on_tame": {
        "add": {
          "component_groups": [
            "standing"
          ]
        }
      },
      "sit_down": {
        "remove": {
          "component_groups": [
            "standing"
          ]
        },
        "add": {
          "component_groups": [
            "sitting"
          ]
        }
      },
      "stand_up": {
        "remove": {
          "component_groups": [
            "sitting"
          ]
        },
        "add": {
          "component_groups": [
            "standing"
          ]
        }
      }
    }
  }
}