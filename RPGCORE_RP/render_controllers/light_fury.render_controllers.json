{
	"format_version": "1.8.0",
	"render_controllers": {
		"controller.render.light_fury": {
			"part_visibility": [
				{
					"saddleBags": "query.is_chested"
				},
				{
					"equipement": "query.is_saddled"
				}
			],
			"geometry": "array.geo[query.is_baby]",
			"materials": [
				{
					"*": "material.default"
				}
			],
			"arrays": {
				"geometries": {
					"Array.geo": [
						"Geometry.default",
						"Geometry.baby"
					]
				}
			},
			"textures": [
				"query.is_baby?texture.baby:texture.default"
			]
		}
	}
}