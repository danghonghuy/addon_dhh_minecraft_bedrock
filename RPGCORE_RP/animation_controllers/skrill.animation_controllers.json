{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.skrill.main": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"idle"
					],
					"transitions": [
						{
							"sitting": "query.is_riding||query.is_sitting||query.property('dhh:sitting')"
						},
						{
							"walking": "query.is_on_ground&&query.is_moving"
						},
						{
							"flying": "!query.is_on_ground&&query.is_moving"
						}
					],
					"blend_transition": true
				},
				"sitting": {
					"animations": [
						"sit"
					],
					"transitions": [
						{
							"default": "!query.is_riding&&!query.is_sitting&&!query.property('dhh:sitting')"
						}
					],
					"blend_transition": 0.5
				},
				"gliding": {
					"animations": [
						"glide"
					],
					"transitions": [
						{
							"walking": "query.is_on_ground&&query.is_moving"
						},
						{
							"flying": "query.vertical_speed>=0"
						},
						{
							"default": "query.is_on_ground&&!query.is_moving"
						}
					],
					"blend_transition": true
				},
				"walking": {
					"animations": [
						"walk"
					],
					"transitions": [
						{
							"default": "!query.is_on_ground||!query.is_moving"
						}
					],
					"blend_transition": true
				},
				"flying": {
					"animations": [
						"fly"
					],
					"transitions": [
						{
							"gliding": "query.vertical_speed<0"
						},
						{
							"walking": "query.is_on_ground&&query.is_moving"
						},
						{
							"default": "query.is_on_ground&&!query.is_moving"
						}
					],
					"blend_transition": true
				}
			}
		}
	}
}