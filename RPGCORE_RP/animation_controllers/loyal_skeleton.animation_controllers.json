{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.loyal_skeleton": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "animations": [ "idle" ],
          "transitions": [
            { "walking": "query.modified_move_speed > 0.1" },
            { "attacking": "query.has_target && (query.is_using_item || query.is_delayed_attacking)" }
          ],
          "blend_transition": 0.2
        },
        "walking": {
          "animations": [ "walk" ],
          "transitions": [
            { "idle": "query.modified_move_speed <= 0.1" },
            { "attacking": "query.has_target && (query.is_using_item || query.is_delayed_attacking)" }
          ],
          "blend_transition": 0.2
        },
        "attacking": {
          "animations": [ "attack", "bow" ],
          "transitions": [
            { "idle": "!query.has_target || (!query.is_using_item && !query.is_delayed_attacking)" },
            { "walking": "query.modified_move_speed > 0.1 && query.has_target && (!query.is_using_item && !query.is_delayed_attacking)" }
          ],
          "blend_transition": 0.1
        }
      }
    }
  }
}