{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.flame_whipper.main": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"idle"
					],
					"transitions": [
						{
							"sitting": "query.is_riding||query.property('dhh:sitting')"
						},
						{
							"hovering": "!query.is_on_ground&&!query.is_moving"
						},
						{
							"walking": "query.is_on_ground&&query.is_moving"
						},
						{
							"flying": "!query.is_on_ground&&query.is_moving"
						}
					],
					"blend_transition": 3
				},
				"sitting": {
					"animations": [
						"sit"
					],
					"transitions": [
						{
							"default": "!query.is_riding&&!query.property('dhh:sitting')"
						}
					],
					"blend_transition": 0.5
				},
				"hovering": {
					"animations": [
						"air_idle"
					],
					"transitions": [
						{
							"default": "query.is_on_ground&&!query.is_moving&&!query.is_sitting&&!query.is_riding"
						},
						{
							"sitting": "query.is_sitting"
						},
						{
							"walking": "query.is_on_ground&&query.is_moving"
						},
						{
							"flying": "!query.is_on_ground&&query.is_moving"
						}
					],
					"blend_transition": 3
				},
				"walking": {
					"animations": [
						"walk"
					],
					"transitions": [
						{
							"default": "query.is_on_ground&&!query.is_moving&&!query.is_sitting&&!query.is_riding"
						},
						{
							"hovering": "!query.is_on_ground&&!query.is_moving"
						},
						{
							"sitting": "query.is_sitting"
						},
						{
							"flying": "!query.is_on_ground&&query.is_moving"
						}
					],
					"blend_transition": 3
				},
				"flying": {
					"animations": [
						"fly"
					],
					"transitions": [
						{
							"default": "query.is_on_ground&&!query.is_moving&&!query.is_sitting&&!query.is_riding"
						},
						{
							"hovering": "!query.is_on_ground&&!query.is_moving"
						},
						{
							"sitting": "query.is_sitting"
						},
						{
							"walking": "query.is_on_ground&&query.is_moving"
						}
					],
					"blend_transition": 3
				}
			}
		},
		"controller.animation.flame_whipper.attack_controller": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"transitions": [
						{
							"attacking": "query.is_delayed_attacking"
						}
					]
				},
				"attacking": {
					"animations": [
						"bite"
					],
					"transitions": [
						{
							"idle": "!query.is_delayed_attacking"
						}
					]
				}
			}
		}
	}
}