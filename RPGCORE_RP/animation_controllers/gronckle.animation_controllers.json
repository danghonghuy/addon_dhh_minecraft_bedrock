{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.gronckle.main": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"idle"
					],
					"transitions": [
						{
							"siting": "query.is_riding||query.property('dhh:sitting')"
						},
						{
							"hovering": "!query.is_on_ground&&!query.is_moving"
						},
						{
							"walking": "query.is_on_ground&&query.is_moving"
						},
						{
							"flying": "!query.is_on_ground&&query.is_moving"
						},
						{
							"attacking": "query.is_delayed_attacking"
						}
					],
					"blend_transition": 0.5
				},
				"attacking": {
					"animations": [
						"bite"
					],
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						}
					],
					"blend_transition": 0.5
				},
				"siting": {
					"animations": [
						"sit"
					],
					"transitions": [
						{
							"default": "!query.is_riding&&!query.property('dhh:sitting')"
						}
					],
					"blend_transition": 0.5
				},
				"hovering": {
					"animations": [
						"air_idle"
					],
					"transitions": [
						{
							"flying": "!query.is_on_ground&&query.is_moving"
						},
						{
							"walking": "query.is_on_ground&&query.is_moving"
						},
						{
							"default": "query.is_on_ground&&!query.is_moving"
						}
					],
					"blend_transition": 0.5,
					"sound_effects": [
						{
							"effect": "fly"
						}
					]
				},
				"walking": {
					"animations": [
						"walk"
					],
					"transitions": [
						{
							"default": "!query.is_on_ground||!query.is_moving"
						}
					],
					"blend_transition": 0.5
				},
				"flying": {
					"animations": [
						"fly"
					],
					"transitions": [
						{
							"hovering": "!query.is_on_ground&&!query.is_moving"
						},
						{
							"walking": "query.is_on_ground&&query.is_moving"
						},
						{
							"default": "query.is_on_ground&&!query.is_moving"
						}
					],
					"blend_transition": 0.5,
					"sound_effects": [
						{
							"effect": "fly"
						}
					]
				}
			}
		}
	}
}