{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.thunderdrum.main": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"idle"
					],
					"transitions": [
						{
							"sitting": "query.is_riding||query.property('dhh:sitting')"
						},
						{
							"swimming": "query.is_in_water&&query.is_moving"
						},
						{
							"floating": "query.is_in_water&&!query.is_moving"
						},
						{
							"walking": "query.is_on_ground&&query.is_moving"
						},
						{
							"flying": "!query.is_on_ground&&query.is_moving"
						}
					],
					"blend_transition": 0.5
				},
				"sitting": {
					"animations": [
						"sit"
					],
					"transitions": [
						{
							"default": "!query.is_riding&&!query.property('dhh:sitting')"
						}
					],
					"blend_transition": 0.5
				},
				"swimming": {
					"animations": [
						"swim"
					],
					"transitions": [
						{
							"default": "!query.is_in_water||!query.is_moving"
						}
					],
					"blend_transition": 0.5
				},
				"floating": {
					"animations": [
						"float"
					],
					"transitions": [
						{
							"default": "!query.is_in_water||query.is_moving"
						}
					],
					"blend_transition": 0.5
				},
				"walking": {
					"animations": [
						"walk"
					],
					"transitions": [
						{
							"default": "!query.is_on_ground||!query.is_moving"
						}
					],
					"blend_transition": 0.5
				},
				"flying": {
					"animations": [
						"fly"
					],
					"transitions": [
						{
							"walking": "query.is_on_ground&&query.is_moving"
						},
						{
							"default": "query.is_on_ground&&!query.is_moving"
						}
					],
					"blend_transition": 0.5
				}
			}
		}
	}
}