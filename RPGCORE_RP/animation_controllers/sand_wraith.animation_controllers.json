{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.sand_wraith.main": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"idle"
					],
					"transitions": [
						{
							"sitting": "query.is_riding||query.property('dhh:sitting')"
						},
						{
							"walking": "query.is_on_ground&&query.is_moving"
						},
						{
							"flying": "!query.is_on_ground"
						},
						{
							"attacking": "query.is_delayed_attacking"
						}
					],
					"blend_transition": 0.5
				},
				"attacking": {
					"animations": [
						"attack"
					],
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						}
					],
					"blend_transition": 0.5
				},
				"sitting": {
					"animations": [
						"sit"
					],
					"transitions": [
						{
							"default": "!query.is_riding&&!query.property('dhh:sitting')"
						}
					],
					"blend_transition": 0.5
				},
				"walking": {
					"animations": [
						"walk"
					],
					"transitions": [
						{
							"default": "!query.is_on_ground||!query.is_moving"
						}
					],
					"blend_transition": 0.5
				},
				"flying": {
					"animations": [
						"fly"
					],
					"transitions": [
						{
							"default": "query.is_on_ground"
						}
					],
					"blend_transition": 0.5
				}
			}
		}
	}
}